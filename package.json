{
  "name": "convertify_backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "npm run build && NODE_ENV=dev nest start --watch",
    "start:pm-dev": "npm run build && NODE_ENV=dev pm2 restart curr_conv --update-env",
    "start:stage": "npm run build && NODE_ENV=stage pm2 stop adapt &&  pm2 start adapt --update-env --exp-backoff-restart-delay=100",
    "start:simulate-prod": "npm run build && pm2 stop main && NODE_ENV=stage pm2 start main --update-env --exp-backoff-restart-delay=100",
    "start:prod": "npm run build && pm2 stop main && NODE_ENV=prod pm2 start main  --update-env --exp-backoff-restart-delay=100",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "dev": "docker-compose --profile dev up --build -V -d && docker-compose logs -f",
    "prod": "docker-compose --profile production up --build -d",
    "deploy": "npm ci && npm run build && npm run start:prod"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.6.1",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/class-transformer": "^0.4.0",
    "@nestjs/class-validator": "^0.13.1",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^10.4.15",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^3.0.0",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/testing": "^10.4.15",
    "@nestjs/websockets": "^10.0.0",
    "@types/amqplib": "^0.10.6",
    "@types/aws-serverless-express": "^3.3.10",
    "amqplib": "^0.10.5",
    "aws-serverless-express": "^3.4.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^5.2.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "mongoose": "^8.9.2",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^8.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^27.4.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.1.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
